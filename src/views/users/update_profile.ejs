  <div class="flex-container">
    <h1>Update Profile</h1>
  </div>

  <div class="flex-container">
    <form class="pure-form pure-form-stacked" action="/user/update" method="POST">
      <fieldset>
        <div class="pure-control-group">
          <label>Full Name:</label>
          <input id="name" type="text" placeholder="Please Enter First and Last Name" name="full_name" required/>
        </div>

        <div class="pure-control-group">
          <label>Favorite Crystal:</label>
          <input id="crystal" type="text" name="favorite_crystal" required/>
        </div>

        <div class="pure-controls">
          <button type="submit" class="pure-button pure-button-primary">Submit</button>
        </div>
      </fieldset>
    </form>

